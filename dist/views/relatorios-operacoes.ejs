    </style>

    <div class="wrap">
      <div class="hdr">
        <img src="${esc(LOGO_URL)}" alt="Logo"/>
        <div>
          <h1 class="title">Relat√≥rio ‚Äî Opera√ß√£o</h1>
          <div class="subtitle">Centro de Intelig√™ncia Metropolitana</div>
        </div>
        <div style="margin-left:auto; text-align:right" class="small muted">
          Emitido em ${esc(new Date().toLocaleString('pt-BR'))}
        </div>
      </div>

      <div class="meta">
        <div class="k">Opera√ß√£o</div><div>${esc(opText)}</div>
        <div class="k">Per√≠odo</div><div>${esc(from)} ‚Äî ${esc(to)}</div>
        <div class="k">Cidade</div><div>${esc(cidadeText)}</div>
      </div>

      <div class="kpis">
        ${[
          ['Fiscaliza√ß√µes', cards.fiscalizacoes],
          ['Pessoas',       cards.pessoas],
          ['Ve√≠culos',      cards.veiculos],
          ['Detidos',       cards.detidos],
          ['Itens apreen.', cards.itensApreendidos],
          ['Apreens√µes',    cards.apreensoes],
          ['Multados',      cards.multados],
          ['Fechados',      cards.fechados],
          ['Lacrados',      cards.lacrados]
        ].map(([l,v])=>`
          <div class="kpi"><div class="lbl">${esc(l)}</div><div class="val">${numBR(v)}</div></div>
        `).join('')}
      </div>

      <div class="two-col">
        <div>
          <h3>Distribui√ß√£o por cidade</h3>
          <table>
            <thead>
              <tr>
                <th>Cidade</th>
