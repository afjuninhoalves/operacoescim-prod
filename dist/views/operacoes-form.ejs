<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title><%= (mode === 'edit' ? 'Editar operação' : 'Nova operação') %></title>
  <style>
    body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Arial;margin:0;background:#0b1220;color:#e5e7eb}
    .wrap{max-width:900px;margin:30px auto;padding:0 16px}
    .card{background:#0f172a;border:1px solid #1f2937;border-radius:12px;padding:18px}
    .row{display:grid;grid-template-columns:1fr 1fr;gap:12px}
    label{display:block;margin:10px 0 6px}
    input[type=text],input[type=datetime-local],textarea{
      width:100%;padding:10px;border-radius:10px;border:1px solid #1f2937;background:#111827;color:#e5e7eb
    }
    textarea{min-height:90px}
    .btns{display:flex;gap:10px;margin-top:14px}
    .btn{padding:10px 14px;border-radius:10px;border:1px solid #374151;background:#111827;color:#e5e7eb;text-decoration:none}
    .btn:hover{filter:brightness(1.08)}
    .errors{background:#1f2937;border:1px solid #ef4444;color:#fff;padding:12px;border-radius:10px;margin-bottom:12px}
    .cities{display:grid;grid-template-columns:repeat(auto-fill,minmax(200px,1fr));gap:8px;margin-top:8px}
  </style>
</head>
<body>
  <div class="wrap">
    <h2><%= (mode === 'edit' ? 'Editar operação' : 'Nova operação') %></h2>

    <% if (errors && errors.length) { %>
      <div class="errors">
        <ul style="margin:0;padding-left:18px">
          <% errors.forEach(e => { %><li><%= e %></li><% }) %>
        </ul>
      </div>
    <% } %>

    <form method="post" action="<%= (mode === 'edit' ? ('/operacoes/' + values.id + '/editar') : '/operacoes/nova') %>">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>

      <div class="card">
        <div class="row">
          <div>
            <label>Nome da operação</label>
            <input type="text" name="nome" value="<%= (values && values.nome) || '' %>" required />
          </div>
          <div>
            <label>Início agendado</label>
            <input type="datetime-local" name="inicio_agendado" value="<%= (values && values.inicio_agendado) || '' %>" required />
          </div>
        </div>

        <div>
          <label>Descrição</label>
          <textarea name="descricao"><%= (values && values.descricao) || '' %></textarea>
        </div>

        <div>
          <label>Cidades participantes</label>
          <div class="cities">
            <% (cidades || []).forEach(c => { 
                 const sel = Array.isArray(values?.cidades) ? values.cidades.includes(c.id) : false; %>
              <label>
                <input type="checkbox" name="cidades" value="<%= c.id %>" <%= sel ? 'checked' : '' %> />
                <%= c.nome %>
              </label>
            <% }) %>
          </div>
        </div>

        <div class="btns">
          <a class="btn" href="<%= (mode === 'edit' ? ('/operacoes/' + values.id) : '/operacoes') %>">Cancelar</a>
          <button class="btn" type="submit">Salvar</button>
        </div>
      </div>
    </form>
  </div>
</body>
</html>
